{
	"editor.formatOnPaste": false,
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.codeActionsOnSave": {
		"source.fixAll": "never",
		"source.fixAll.eslint": "explicit"
	},
	"cSpell.language": "uk,en,en-US,lorem",
	"files.eol": "\n",
	"runOnSave.commands": [
		{
			"match": "\\.(css|s[ac]ss)$",
			"runIn": "vscode",
			"commandBeforeSaving": "sort-css-declarations.sort-all"
		}
	],
	"scss.suggestVariables": true,
	"scss.suggestMixins": true,
	"scss.suggestFunctions": true,
	"cSpell.words": [
		"ameliacneskymusic",
		"amelianceskymusic",
		"Callout",
		"isodate",
		"rehype",
		"velite"
	],
	"files.exclude": {
		"**/.git": false,
		"**/.svn": false,
		"**/.hg": false,
		"**/CVS": false,
		"**/.DS_Store": false,
		"**/Thumbs.db": false,
		".eslint": false,
		".history": false,
		".husky": false,
		".lh": false,
		".next": false,
		".vscode": false,
		"node_modules": false,
		"public": false,
		"._backup": false,
		".editorconfig": false,
		".env.local": false,
		".eslintrc.js": false,
		".gitignore": false,
		".lintstagedrc.js": false,
		".prettierrc.js": false,
		"LICENSE": false,
		"next-env.d.ts": false,
		"next.config.js": false,
		"next.config.mjs": false,
		"package.json": false,
		"postcss.config.js": false,
		"README.md": false,
		"tsconfig.json": false,
		"tsconfig.tsbuildinfo": false,
		"_mantine.scss": false,
		".git": false,
		".file-status": false,
		".eslintcache": false,
		".env.prod": false,
		".gitmodules": false,
		".eslintignore": false,
		".velite": false,
		"config": false,
		"content": false,
		"velite.config.ts": false
	},
	"checkpoints.showActiveFileOnly": true,
	"sort-css-declarations.order": [
		["font-effect", "font-emphasize"],
		["font-emphasize", "font-emphasize-position"],
		["font-emphasize-position", "font-emphasize-style"],
		["font-emphasize-style", "font-smooth"],
		["font-smooth", "writing-mode"],
		["writing-mode", "text-size-adjust"],
		["text-size-adjust", "position"],

		//* Positioning
		["position", "top"],
		["top", "right"],
		["right", "bottom"],
		["bottom", "left"],
		["left", "z-index"],
		["z-index", "display"],

		//* Box model
		["display", "float"],
		["float", "width"],
		["width", "min-width"],
		["min-width", "max-width"],
		["max-width", "height"],
		["height", "min-height"],
		["min-height", "max-height"],
		["max-height", "box-sizing"],
		["box-sizing", "padding"],
		["padding", "padding-top"],
		["padding-top", "padding-right"],
		["padding-right", "padding-bottom"],
		["padding-bottom", "padding-left"],
		["padding-left", "margin"],
		["margin", "margin-top"],
		["margin-top", "margin-right"],
		["margin-right", "margin-bottom"],
		["margin-bottom", "margin-left"],
